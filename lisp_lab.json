{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "lab-user",
            "metadata": {
                "description": "Password to be configured in the NVA (user is lab-user)"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": null,
            "metadata": {
                "description": "Password to be configured in the NVA (user is lab-user)"
            }
        },
        "config": {
            "type": "object",
            "defaultValue": {
                "value": [
                    {
                        "vnetName": "onprem",
                        "vnetPrefix": "172.21.0.0/24",
                        "vmSubnet": "172.21.0.0/26",
                        "nvaSubnet": "172.21.0.64/26",
                        "vmName": "onprem-vm",
                        "nvaName": "onprem-pxtr"
                    },
                    {
                        "vnetName": "azure-vnet1",
                        "vnetPrefix": "172.21.101.0/24",
                        "vmSubnet": "172.21.101.0/26",
                        "nvaSubnet": "172.21.101.64/26",
                        "vmName": "azure-vm1",
                        "nvaName": "azure-pxtr1"
                    }
                ]
            }
        }
    },
    "variables": {
        "networkApiVersion": "2018-08-01",
        "deploymentApiVersion": "2017-05-10",
        "nvaTemplateUrl": "[uri(deployment().properties.templateLink.uri, 'nvaCSR1kv.json')]"
    },
    "resources": [
		{
			"comments": "Simulate a branch with a VNET plus an NVA",
			"name": "branchNva",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "[variables('deploymentApiVersion')]",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "[variables('nvaTemplateUrl')]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
                    "adminUsername": {"value": "[parameters('adminUsername')]"},
                    "adminPassword": {"value": "[parameters('adminPassword')]"},
                    "vnetPrefix": {"value": "[parameters('config')['value'][copyIndex()]['vnetPrefix']]"},
                    "vnetName": {"value": "[parameters('config')['value'][copyIndex()]['vnetName']]"},
                    "subnet1Name": {"value": "nvaSubnet"},
                    "subnet1Prefix": {"value": "[parameters('config')['value'][copyIndex()]['nvaSubnet']]"},
                    "subnet2Name": {"value": "vmSubnet"},
                    "subnet2Prefix": {"value": "[parameters('config')['value'][copyIndex()]['vmSubnet']]"},
                    "nvaName": {"value": "[parameters('config')['value'][copyIndex()]['nvaName']]"},
                    "nvaSize": {"value": "Standard_D2_v2"},
                    "vmName": {"value": "[parameters('config')['value'][copyIndex()]['vmName']]"},
                    "vmSize": {"value": "Standard_B1s"}
                }
            },
            "dependsOn": [
            ],
            "copy": {
                "name": "vnetcopy",
                "count": "[length(parameters('config')['value'])]"
            }        
        }
    ]
}
